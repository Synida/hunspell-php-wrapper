{
    "name": "synida/hunspell-php-wrapper",
    "license": "MIT",
    "description": "PHP wrapper for HunSpell with threading support and custom dictionary support.",
    "keywords": ["spelling", "spellcheck", "spellchecker", "spell-check", "spell-checker", "hunspell", "wrapper", "threading", "multithreading"],
    "homepage": "https://github.com/Synida/hunspell-php-wrapper",
    "type": "library",
    "authors": [
        {
            "name": "David Hlavati",
            "email": "david.hlavati@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HunSpellPhpWrapper\\": "src/HunSpellPhpWrapper"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "require": {
        "php": "^7.0 || ^8.0",
        "composer/composer": "^1.10.23 || ^2.1.9",
        "ext-json": "*",
        "ext-intl": "*"
    },
    "suggest": {
        "php": "^7.2",
        "ext-parallel": "*"
    },
    "scripts": {
        "post-install-cmd": "HunSpellPhpWrapper\\Installer::configure"
    }
}
